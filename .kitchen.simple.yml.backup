---
driver:
  name: ec2
  region: us-east-1
  instance_type: t3.small
  associate_public_ip: true
  interface: dns

provisioner:
  name: chef_zero
  product_name: chef
  chef_license: accept-silent

verifier:
  name: inspec

platforms:
  - name: amazon-linux-2
    driver:
      image_id: ami-06b21ccaeff8cd686
    transport:
      username: ec2-user
  - name: ubuntu-22-04
    driver:
      image_id: ami-0c398cb65a93047f2
    transport:
      username: ubuntu
  - name: rhel-9
    driver:
      image_id: ami-06d2e6fdb95d0813e
    transport:
      username: ec2-user
  - name: windows-2019
    driver:
      image_id: ami-0d8940f0876d45867
      instance_type: t3.medium
    transport:
      name: winrm
      username: administrator
      elevated: true

suites:
  - name: default
    run_list:
      - recipe[enterprise-time::default]
    attributes:
      time:
        timezone: UTC
        ntp_servers:
          - 0.pool.ntp.org
          - 1.pool.ntp.org
          - 2.pool.ntp.org
          - 3.pool.ntp.org
        windows:
          w32time_config:
            NtpServer: time.windows.com,0x1 time.nist.gov,0x1
            Type: NTP
            Enabled: 1
  - name: supermarket
    run_list:
      - recipe[enterprise-time::default]
    attributes:
      time:
        timezone: America/New_York
        ntp_servers:
          - 0.pool.ntp.org
          - 1.pool.ntp.org
          - time.nist.gov
        windows:
          w32time_config:
            NtpServer: time.windows.com,0x1 time.nist.gov,0x1
            Type: NTP
            Enabled: 1
